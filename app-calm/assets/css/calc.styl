html
    background #232323
    display flex
    justify-content center
    height 100%
    width 100%
    font-family 'Roboto' , sans-serif
    font-weight 100
    color white
    font-size 16px
    box-sizing border-box
*
    box-sizing inherit
    transition all 0.3s ease
    &:hover
        transition all 0.3s ease
body
    font-size inherit
    height 561.25px
    width 360px
    background-image url(../img/background-calc.jpg)
    background-size cover
    background-attachment fixed
    background-position center center
    box-shadow 0px 0px 10px 2px white
    margin auto
    position relative
    left unset
    right unset
    bottom unset
    border-top 1px solid #af164e
    overflow hidden
    > div
        background #202020
        padding 0.25rem 1rem
        height 110px
        input
            background transparent
            border 0
            width 100%
            font-size (12/16)rem
            color white
            text-align right
            opacity .7
        p
            padding .5rem 0
            font-size (61/16)rem
            text-align right
    ul
        li
            position relative
            background transparent
            &::after
                content ""
                display block
                padding-bottom 100%
            &:hover
                background  alpha(#232323,.5)
                cursor pointer
            button
                position absolute
                width 100%
                height 100%
                border 0
                background transparent
                color white
                font-size 1.7rem
                font-weight 100
        &#functions
            width 75%
            li
                width 33.33333%
                float left
        &#digits
            width 75%
            li
                width 33.33333%
                float left
                &.zero
                    width 66.6666%
                    button
                        text-align left
                        padding-left calc(25% - .25rem)
                    &::after
                        padding-bottom 50%
        &#operations
            position absolute
            right 0
            top 110px
            left unset
            bottom unset
            height 449px
            width 25%
            background alpha(#232323,.5)
                
                
