html
    background #232323
    border 2px solid #124fea
    min-height 200%
    height 200%
    color white 
body
    position relative
    border 10px solid aqua
    height 100%
    margin 0
    position relative
    top 110px
    background gray
    padding-bottom 100px
header
    width 100%
    height 100px
    width calc(100% - 10px)
    background orange
    position fixed
    top 0
    left 0
    bottom unset
    border 5px solid red
    right unset
    nav
        a,ul, ul >li
            display inline-block
            background green
            height 100px
            width 100px
            margin 0
        ul
            padding 0
            li
                list-style none
                margin-left -1em
section

    h1
        margin-bottom 10vw
        line-height 0
    div
        border 1vw solid purple
        background yellow
        height 100px
        box-sizing border-box
    div[class^="hola"]
        float left
        &.hola1
            width 35%
            margin-right 10%
        &.hola2
            width 55%
    div[class^="adios"]
        display inline-block
        &.adios1
            width 35%
            margin-right calc(10% - 0.25em)
        &.adios2
            width calc(55%)
            margin-right -0.25em
            
    


footer
    position absolute
    bottom -130px
    left -10px
    width 100%
    width 100%
    top unset
    right unset
    background purple
    min-height 100px
    border 10px solid gold